{
  "compilerOptions": {
    "outDir": "out-scripts",
    "module": "commonjs",
    "target": "esnext",
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": [
    "src/lib/**/*.ts",
    "src/script/**/*.ts",
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.tsx", "src/lib/use*.ts"],
}